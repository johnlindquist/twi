{
  "name": "@johnlindquist/twi",
  "version": "0.0.0-development",
  "description": "A CLI tool to scrape tweets from a specific user using puppeteer.",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      ["@semantic-release/npm", {
        "npmPublish": true
      }]
    ],
    "ci": true,
    "dryRun": false,
    "tagFormat": false
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@johnlindquist/twi"
    ]
  },
  "main": "dist/index.js",
  "bin": {
    "twi": "./dist/index.js"
  },
  "scripts": {
    "dev": "pnpm node index.ts",
    "build": "tsc",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "postinstall": "playwright install chromium"
  },
  "keywords": [
    "twitter",
    "scraper",
    "cli"
  ],
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "clipboardy": "^4.0.0",
    "conf": "^12.0.0",
    "date-fns": "^3.0.6",
    "env-paths": "^3.0.0",
    "playwright": "^1.50.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^20.10.6",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "semantic-release": "^23.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "author": "John Lindquist",
  "license": "MIT"
}
